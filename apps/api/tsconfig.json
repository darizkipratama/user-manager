{
    "compilerOptions": {
      "composite": true,
      "declaration": true,
      "declarationDir": "dist",
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "lib": ["es2020", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmit": true,
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "target": "es2020",
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": ["node_modules"]
  }