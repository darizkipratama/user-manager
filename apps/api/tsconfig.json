{
    "compilerOptions": {
      "composite": true,
      "declaration": true,
      "declarationDir": "dist",
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "lib": ["es2020", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmit": true,
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "target": "es2020",
      "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "**/*.ts",
        "next-env.d.ts",
        "next.config.js",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
  }